<div class="container body-content">

    <h1>@ViewBag.title</h1>

    <form action="/search/results" method="post">
        <h2>Search by:</h2>

        <p>
            @foreach (var column in ViewBag.columns)
            {
                <span>
                    <input type="radio" name="searchType" id="@column.Key" value="@column.Key" checked="@column.Key == 'all'" />
                    <label for="@column.Key">@column.Value</label>
                </span>
            }

        </p>

        <p>
            <label for="searchTerm">Keyword:</label>
            <input type="text" name="searchTerm" id="searchTerm" />
        </p>

        <input type="submit" value="Search" />
    </form>

    <hr />
    @if (ViewBag.jobs != null)
    {


    @foreach (Job job in ViewBag.jobs)
    {
        <table class="Table">
            <tr>
                <th>Id:</th>
                <th>@job.Id</th>
            </tr>
            <tr>
                <th>Name:</th>
                <th>@job.Name</th>
            </tr>
            <tr>
                <th>Id:Employer</th>
                <th>@job.Employer</th>
            </tr>
            <tr>
                <th>Location:</th>
                <th>@job.Location</th>
            </tr>
            <tr>
                <th>Position Type:</th>
                <th>@job.PositionType</th>
            </tr>
            <tr>
                <th>Core Competency:</th>
                <th>@job.CoreCompetency</th>
            </tr>
        </table>
        <p>-------------------------------------------------------------------------------</p>
        }
        

    }

</div>